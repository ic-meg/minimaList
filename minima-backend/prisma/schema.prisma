generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model task {
  id        Int      @id @default(autoincrement())
  title     String
  priority  Priority
  day       Day
  tag       Tag
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
  NEXTWEEK
  LATER
}

enum Tag {
  IMPORTANT
  NOTIMPORTANT
}
